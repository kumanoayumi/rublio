
<h1>Listing groups</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
  </tr>

<% @groups.each{ |group| %>
  <%= form_for( group, url: { action: "update", id: group.id } ) do |f| %>
  <tr>
    <td><%= group.name %></td>
    <td><%= f.text_field :name %></td>
    <td><%= f.submit( "Update", "data-disable-with" => "Update" ) %></td>
  </tr>
  <% end %>
<% } %>
</table>

