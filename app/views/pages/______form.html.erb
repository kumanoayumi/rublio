
<%= form_for( :page, url: { action: @submit, id: @page.try(:id), group_id: @group_id } ) do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, cols: 130, rows: 50 %>
  </div>

  <div class="actions">
    <%= f.submit t( "menu.#{@submit}", default: @submit ), "data-disable-with" => t( "menu.#{@submit}", default: @submit ) %>
  </div>
<% end %>
